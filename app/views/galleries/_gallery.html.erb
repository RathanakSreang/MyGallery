<div class="col-lg-3 col-md-4 col-xs-6 thumb">
  <div data-si-mousemove-trigger="100"  class="shuffle-me offset__1">
    <%= gallery.title %>
    <%= link_to gallery do %>
      <div class="images">
        <% if gallery.photos %>
          <% gallery.photos.limit(3).each do |photo| %>
            <%= image_tag photo.path.url, class: "img-responsive" %>
          <% end %>
        <% else %>
          <img class="img-responsive" src="http://placehold.it/400x400" alt=""/>
        <% end %>
      </div>      
    <% end %>
  </div>
</div>
