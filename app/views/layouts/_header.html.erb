<header>
  <div class="header_top">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1><a href="#">Photo.Folio <br> Capturing Life </a></h1>          
          </div>
        </div>
    </div>
  </div>  
  <div class="navbar navbar-inverse" id="stuck_container" ng-controller="NavController">
    <div class="container">      
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collape-menu">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <%= link_to root_path do %>
          <span class="logo">Photo.Folio</span>
        <% end %>
      </div>    
      <div class="collapse navbar-collapse" id="collape-menu">
        <ul class="nav navbar-nav sf-menu navbar-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Gallery", galleries_path %></li>          
          <li><%= link_to "Contact", contact_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Help", help_path %></li>          
          <li><%#= link_to current_user.email, current_user %></li>          
          <li ng-show="signIn()"><%= link_to "Sign out", destroy_user_session_path, "ng-click" => "logout()" %></li>
          <li ng-hide="signIn()"><%= link_to "Sign in", user_session_path %></li>
        </ul>
      </div>    
    </div>
  </div>
</header>
