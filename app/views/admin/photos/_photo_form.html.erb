<%= render "shared/error_message", object: f.object %>
<div class="form-group">
  <%= f.label :gallery %>
  <%= f.select(:gallery_id,options_from_collection_for_select(Gallery.all, "id", "title", (f.object.gallery.nil? ? 1 : f.object.gallery.id)),{},{class: "form-control"}) %>
</div>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, rows: "5", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :path %>
  <%= f.file_field :path, class: "form-control" %>
  <%= f.hidden_field :path_cache %>
</div>
OR
<div class="form-group">
  <%= f.label :url_path %>
  <%= f.text_field :remote_path_url, class: "form-control" %>
</div>
