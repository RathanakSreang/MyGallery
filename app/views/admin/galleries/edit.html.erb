<center><h3>Edit Gallery</h3></center>
<div class="row">
  <div class="col-md-4 col-md-offset-4 well">
  <%= form_for [:admin, @gallery] do |f| %>
    <%= render "admin/galleries/gallery_form", f: f %>
    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
      <center>
        <%= link_to "Back", admin_galleries_path %>
      </center>    
    </div>
  <% end %>
  </div>
</div>
